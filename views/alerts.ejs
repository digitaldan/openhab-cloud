<% if (errormessages.length > 0) { %>
<div class="row">
    <div class="span12">
        <div class="alert alert-error fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= errormessages %>
        </div>
    </div>
</div>
<% } %>
<% if (infomessages.length > 0) { %>
<div class="row">
    <div class="span12">
        <div class="alert alert-info fade in">
            <button type="button" class="close" data-dismiss="alert">×</button>
            <%= infomessages %>
        </div>
    </div>
</div>
<% } %>
